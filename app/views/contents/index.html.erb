<div class="page-header">
  <%#= link_to new_content_path, class: 'btn btn-primary' do %>
    <!-- <span class="glyphicon glyphicon-plus"></span>
    New Content -->
  <%# end %>
  <h1>Listing contents</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Userid</th>
            <th>Post</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @contents) do |content| %>
            <td><%= content.userid %></td>
            <td><%= content.post %></td>
            <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
