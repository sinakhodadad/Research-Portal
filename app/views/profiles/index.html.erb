<div class="page-header">
  <h1>Listing profiles</h1>
</div>

<%= render 'profiles/search_form' %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Family</th>
      <th>email</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @profiles) do |profile| %>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.email %></td>
        <td><%= link_to("show", :controller => "profiles", :action => "show", :id => profile.id)   %></td>
    <% end %>
    </tbody>
  </table>
</div>
