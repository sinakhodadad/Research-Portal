<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show project</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @project.title %></dd>

  <dt>Goal:</dt>
  <dd><%= @project.goal %></dd>

  <dt>Start date:</dt>
  <dd><%= @project.start_date %></dd>

  <dt>End time:</dt>
  <dd><%= @project.end_time %></dd>

  <dt>Sponsor:</dt>
  <dd><%= @project.sponsor.name %></dd>

  <dt>Users :</dt>
  <dd>
    <% @profiles.each do |profile|%>
    <%= link_to( profile.email, :controller => "profiles", :action => "show", :id => profile.id) %>
    <%end%>
  </dd>

</dl>
