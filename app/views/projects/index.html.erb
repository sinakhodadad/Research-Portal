<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Sponsor Name</th>
            <th>Goal</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |pj| %>
        <td><%= pj.title %></td>
        <td><%= pj.sponsor.name %></td>
        <td><%= pj.goal %></td>
        <td><%= pj.start_date %></td>
        <td><%= pj.end_time %></td>
        <td><%= link_to 'Show', pj %></td>
        <td><%= link_to 'Edit', edit_project_path(pj) %></td>
        <td><%= link_to 'Destroy', pj, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div> 

