<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
    <tr>
        <th class="hidden-xs">
            <i class="fa fa-user"></i> First Name
        </th>
        <th class="hidden-xs">
            <i class="fa fa-user"></i> Last Name
        </th>
        <th>
            <i class="icon-envelope-alt"></i> Email
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td>
                <%= user.first_name %>
            </td>
            <td> <%= user.last_name %></td>
            <td> <%= user.email %></td>
            <td>
                <%= link_to admin_edit_member_path(user), class: "btn btn-outline btn-circle btn-sm purple" do %>
                    <i class="fa fa-edit"></i> Edit
                <% end %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>