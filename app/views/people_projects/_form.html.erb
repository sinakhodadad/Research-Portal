<%= form_for(@people_project, html: {class: "form-horizontal", role: "form"}) do |f| %>
    <% if @people_project.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@people_project.errors.count, "error") %> prohibited this people_project from being
            saved:</h4>

          <ul>
            <% @people_project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :user_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :user_id, @users.map { |p| [p.email, p.id] }, prompt: "Select one user", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :project_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :project_id, @projects.map { |p| [p.name, p.id] }, prompt: "Select a project", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
