<div class="page-header">
  <%= link_to new_people_project_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New People project
  <% end %>
  <h1>Listing people_projects</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>User</th>
            <th>Project</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @people_projects) do |people_project| %>
            <td><%= people_project.user %></td>
            <td><%= people_project.project %></td>
            <td><%= link_to 'Show', people_project %></td>
        <td><%= link_to 'Edit', edit_people_project_path(people_project) %></td>
        <td><%= link_to 'Destroy', people_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
